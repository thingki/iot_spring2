<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
		http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.1.xsd">
	
	<bean id="bds" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.mariadb.jdbc.Driver"/>
		<property name="url" value="jdbc:mariadb://localhost:3306/dbconnector"/>
		<property name="username" value="root"/>
		<property name="password" value="test"/>
	</bean>
		
	<bean id="iot2bds" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.mariadb.jdbc.Driver"/>
		<property name="url" value="jdbc:mariadb://localhost:3306/iot2"/>
		<property name="username" value="root"/>
		<property name="password" value="test"/>
	</bean>
	
	<bean id="dbconnectorssf" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="bds"></property>
		<property name="configLocation" value="classpath:mybatis-config.xml"></property>
	</bean>

	<bean id="iot2ssf" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="iot2bds"></property>
		<property name="configLocation" value="classpath:mybatis-config.xml"></property>
	</bean>
	
	
</beans>
